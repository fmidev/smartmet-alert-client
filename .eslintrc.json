{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "prettier/vue",
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "$nuxt": true,
    "jQuery": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "vue",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": 2,
    "linebreak-style": "off",
    "no-console":"off",
    "operator-linebreak": [
      "error",
      "after"
    ],
    "no-plusplus": "off",
    "prefer-destructuring": "off",
    "no-cond-assign": "off",
    "no-restricted-syntax": "off",
    "max-len": "off",
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ],
    "import/no-unresolved": "off",
    "no-param-reassign": [
      "error",
      {
        "props": true,
        "ignorePropertyModificationsFor": [
          "acc", // for reduce accumulators
          "e", // for e.returnvalue
          "ctx", // for Koa routing
          "req", // for Express requests
          "request", // for Express requests
          "res", // for Express responses
          "response", // for Express responses
          "$scope", // for Angular 1 scopes,
          "state",
          "config",
          "context",
          "app"
        ]
      }
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "state"
        ]
      }
    ]
  }
}
