{
  "name": "@fmidev/smartmet-alert-client",
  "version": "4.0.0-rc.17",
  "description": "Web application for viewing weather and flood alerts",
  "author": "Finnish Meteorological Institute",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fmidev/smartmet-alert-client.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "test": "vitest"
  },
  "dependencies": {
    "@xmldom/xmldom": "0.8.10",
    "bootstrap": "5.3.2",
    "bootstrap-vue-next": "0.14.10",
    "cross-fetch": "3.1.5",
    "dompurify": "3.0.6",
    "flatbush": "3.2.1",
    "focus-visible": "5.2.0",
    "he": "1.2.0",
    "svgpath": "2.6.0",
    "url-search-params-polyfill": "8.2.5",
    "vue": "3.4.19",
    "xpath": "0.0.33"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "4.5.2",
    "@vue/eslint-config-standard": "8.0.1",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.23.0",
    "eslint-plugin-vue": "9.19.2",
    "fs-extra": "11.2.0",
    "playwright": "1.41.2",
    "postcss-prefixwrap": "1.43.0",
    "postcss-url": "10.1.3",
    "prettier": "3.1.1",
    "rollup-plugin-visualizer": "5.11.0",
    "unplugin-vue-components": "0.26.0",
    "vite": "5.1.4",
    "vite-plugin-banner": "0.7.1",
    "vitest": "0.34.4",
    "vue-adopted-stylesheets": "0.0.7"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "@vue/standard",
      "plugin:vue/recommended",
      "plugin:sonarjs/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": ["simple-import-sort"],
    "rules": {
      "simple-import-sort/imports": "error",
      "simple-import-sort/exports": "error"
    }
  },
  "prettier": {
    "bracketSpacing": true,
    "bracketSameLine": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always",
    "semi": false
  },
  "bugs": {
    "url": "https://github.com/fmidev/smartmet-alert-client/issues"
  },
  "homepage": "https://github.com/fmidev/smartmet-alert-client#readme",
  "directories": {
    "test": "test"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=14.0.0"
  },
  "keywords": ["smartmet", "weather", "alert", "wfs"]
}
